{
  "compilerOptions": {
    "target": "es2017",                               
    "module": "commonjs",                             
    "resolveJsonModule": true,                        
    "sourceMap": true,                                
    "outDir": "out",                                  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                              
  },
  "include": ["./src/"]
}
